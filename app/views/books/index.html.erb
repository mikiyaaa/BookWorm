<h1>トップページ</h1>
<div>
  <% if user_signed_in? %>
    <%= current_user.nickname %>
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to '新規登録', new_user_registration_path %>
    <%= link_to  'ログイン', new_user_session_path %>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to '書籍を追加する', new_book_path %></br>

  <% @books.each do |book| %>
    <%= image_tag(book.image_url) %></br>
    <%= book.title %></br>
    <%= book.author %></br>
    <%= book.caption %></br>
    <%= link_to '登録解除', book_path(book), method: :delete %></br>
  <% end %>
<% end %>


