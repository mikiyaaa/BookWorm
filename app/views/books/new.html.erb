<h1>書籍検索・登録ページ</h1>

<%= form_tag(new_book_path, method: :get, class: 'form-inline') do %>
  <%= text_field_tag :title, @title, class: 'form-control', placeholder:'書籍タイトル', size: 40 %>
  <%= submit_tag '商品を検索', class: 'btn'%>
<% end %>
<% if @books %>
  <% @books.each do |book| %>
    <img src="<%= book.image_url %>" alt="">
    <p><%= book.title %></p>
    <p><%= book.author %></p>
    
    <%= form_tag(books_path) do %>
      <%= hidden_field_tag :isbn, book.isbn %>
      <%= submit_tag 'save' %>
    <% end %>
  <% end %>
<% end %>